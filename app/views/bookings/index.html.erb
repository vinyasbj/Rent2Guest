<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table class="table">
  <thead>
    <tr>
      <th>start date</th>
      <th>end date</th>
      <th>Room</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%=link_to booking.start_date,booking %></td>
        <td><%=link_to booking.end_date,booking %></td>
        <td><%= booking.room.name %></td>
        <td><%= booking.user.username %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to 'New booking', new_booking_path %>