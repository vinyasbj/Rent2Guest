<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%=link_to image.image, image %></td>
        <%# if can? :read, Image.new %>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <%# end %>
        <%# if can? :destroy, Image.new %>
          <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%# end %>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%# if can? :create, Image.new %>
  <%= link_to 'New image', new_image_path %>
<%# end %>